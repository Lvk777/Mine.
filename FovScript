local RunService = game:GetService("RunService")
local Camera = workspace.CurrentCamera

local FovCircleEnabled = false

loadstring(game:HttpGet('https://github.com/ipufo1/deez-nuts/blob/main/utility/drawing.lua?raw=true'))();
local Inside = Drawing.new('Circle')
Inside.Filled = false
Inside.Color = Color3.new(1, 1, 1)
Inside.Radius = 275
Inside.Position = Camera.ViewportSize / 2
Inside.Thickness = 2
Inside.Visible = false

task.spawn(function()
    while Inside do
        Inside.Radius = 275 - ((Camera.FieldOfView - 70) * 2)
        task.wait(0.01) -- Aumenta a frequência da atualização
    end
end)

local function updateFovCircle()
    local screenSize = Camera.ViewportSize
    Inside.Position = Vector2.new(screenSize.X / 2, screenSize.Y / 2)
end

RunService.RenderStepped:Connect(function()
    if FovCircleEnabled then
        updateFovCircle()
        Inside.Visible = true
    else
        Inside.Visible = false
    end
end)
