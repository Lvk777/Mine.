-- FovScript

local RunService = game:GetService("RunService")
local Camera = workspace.CurrentCamera

local FovCircleEnabled = false

loadstring(game:HttpGet('https://github.com/ipufo1/deez-nuts/blob/main/utility/drawing.lua?raw=true'))();
local Inside = Drawing.new('Circle')
Inside.Filled = false
Inside.Color = Color3.new(1, 1, 1)
Inside.Radius = 275
Inside.Position = workspace.CurrentCamera.ViewportSize / 2
Inside.Thickness = 2
Inside.Visible = false

task.spawn(function()
    while true do
        if FovCircleEnabled then
            Inside.Radius = 275 - ((workspace.CurrentCamera.FieldOfView - 70) * 2)
            Inside.Position = Vector2.new(Camera.ViewportSize.X / 2, Camera.ViewportSize.Y / 2)
        end
        task.wait(0.01)
    end
end)

RunService.RenderStepped:Connect(function()
    Inside.Visible = FovCircleEnabled
end)

return {
    setFovCircleEnabled = function(value)
        FovCircleEnabled = value
        print('Fov Circle Status =', value)
    end
}
